<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@color/twhite"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.customer.example.ConcertListActivity">

    <TableLayout
        android:id="@+id/venueTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2">

        <TableRow>
            <TextView
                android:text="CURRENT VENUES"
                android:gravity="center"
                android:padding="12dip" />
        </TableRow>

        <TableRow>
            <Button
                android:text="Lands' End"
                android:padding="3dip"
                android:background="@color/tblue"
                android:textColor="@color/tpurple"
                android:textSize="40sp"
                android:onClick="startLandsLoad"/>
        </TableRow>

        <TableRow>
            <Button
                android:text="Sutro"
                android:padding="3dip"
                android:background="@color/tred"
                android:textColor="@color/tpurple"
                android:textSize="40sp"
                android:onClick="startSutroLoad"/>
        </TableRow>

        <TableRow>
            <Button
                android:text="Panhandle"
                android:padding="3dip"
                android:background="@color/tpurple"
                android:textColor="@color/twhite"
                android:textSize="40sp"
                android:onClick="startPanhandlesLoad"/>
        </TableRow>

        <TableRow>
            <Button
                android:text="Twin Peaks"
                android:padding="3dip"
                android:background="@color/tgreen"
                android:textColor="@color/tpurple"
                android:textSize="40sp"
                android:onClick="startTwinPeaksLoad"/>
        </TableRow>

    </TableLayout>

</RelativeLayout>
